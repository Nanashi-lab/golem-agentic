{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../../dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
    "tests",
  ],
  "exclude": [
    "../../node_modules"
  ]
}
